<?xml version="1.0" encoding="utf-8"?>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="400dp"
            android:layout_height="900dp"
            android:background="#FFF0F5"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.varsha.app1.Main7Activity">

            <TextView
                android:id="@+id/mtextviewname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#008080"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <TextView
                android:id="@+id/mTextViewResearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Research Work"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#483D8B"
                android:textSize="15dp"
                android:layout_below="@+id/textView_query"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/mTextViewDetail"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:scrollbars="vertical"
                android:maxLines = "14"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/mTextViewResearch"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView_query2" />

    <EditText
                android:id="@+id/editText_query"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:lines="4"
                android:text="Email your query"
                android:textIsSelectable="false"
                android:textSize="12dp"
                android:layout_below="@+id/mtextviewname"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/mtextviewname" />

    <TextView
        android:id="@+id/textView_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Submit (Directly)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#800080"
        android:textSize="14dp"
        android:layout_below="@+id/editText_query"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Submit (Using App)"
        android:id="@+id/textView_query2"
        android:layout_below="@+id/editText_query"
        android:layout_alignEnd="@+id/mtextviewname"
        android:textColor="#800080" />

</RelativeLayout>
